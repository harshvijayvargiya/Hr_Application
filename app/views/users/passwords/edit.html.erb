<div class="card o-hidden border-0 shadow-lg my-5">
  <div class="card-body p-0">
    <!-- Nested Row within Card Body -->
    <div class="row">
      <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
      <div class="col-lg-7">
        <div class="p-5">
          <div class="text-center">
            <h1 class="h4 text-gray-900 mb-4">Reset Password!</h1>
          </div>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>
          <%= f.hidden_field :reset_password_token %>

          
          
          <div class="form-group row">
            <div class="col-sm-6 mb-3 mb-sm-0">
              <%= f.password_field :password, autocomplete: "New-Password", class: 'form-control form-control-user', placeholder: 'Password' %>
            </div>

            <div class="col-sm-6 mb-3 mb-sm-0">
              <%= f.password_field :password_confirmation, autocomplete: "Confirm-New-Password" ,class: 'form-control form-control-user', placeholder: 'Repeat Password' %>
            </div>  
          </div>

          <div class="actions">
            <%= f.submit "Change my password", class: 'btn btn-primary btn-user btn-block' %>
          </div>
          <hr>
          
          <div class="text-center">
            <%= link_to "Already have an account? Login!", new_session_path(resource_name), class: "small" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

