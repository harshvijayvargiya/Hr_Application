<p id="notice"><%= notice %></p>

<h1>Employees</h1>
<br>
<%= link_to "Active Employee", admin_employees_path(status: 'Active'), class: "btn btn-primary" %>

<%= link_to "Terminated Employee", admin_employees_path(status: 'Terminated'), class: "btn btn-primary" %>

<%= link_to "On Notice Employee", admin_employees_path(status: 'On Notice'), class: "btn btn-primary" %>

<%= link_to "All Employee", admin_employees_path, class: "btn btn-primary" %>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
    <tr>
      <td><%= employee.name %></td>
      <td><%= link_to 'Show', admin_employee_path(employee), class: "btn btn-primary" %></td>
      <td><%= link_to 'Edit', edit_admin_employee_path(employee), class: "btn btn-primary" %></td>
      <td><%= link_to 'Destroy', admin_employee_path(employee), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td><br>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Employee', new_admin_employee_path, class: "btn btn-success" %>
