<p id="notice"><%= notice %></p>

<h1>Relatives</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Relation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @relatives.each do |relative| %>
      <tr>
        <td><%= relative.name %></td>
        <td><%= relative.relation %></td>
        <td><%= link_to 'Show', admin_relative_path(relative), class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_admin_relative_path(relative), class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', admin_relative_path(relative), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td><br>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Relative', new_admin_relative_path, class: "btn btn-success" %>
